<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:background="@android:color/white"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <!-- Toolbar với nút Back và title -->
    <androidx.appcompat.widget.Toolbar
        android:id="@+id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        android:background="@android:color/white"
        app:navigationIcon="@drawable/back_button"
        app:title="Settings"
        app:titleTextColor="@color/black" />

    <!-- Nội dung chính có thể scroll được -->
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1">

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <!-- Profile Card -->
            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="16dp"
                app:cardCornerRadius="8dp"
                app:cardElevation="2dp"
                android:padding="16dp">

                <LinearLayout
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center_vertical">

                    <!-- Ảnh đại diện -->
                    <ImageView
                        android:id="@+id/profile_image"
                        android:layout_width="48dp"
                        android:layout_height="48dp"
                        android:src="@drawable/gcl"
                        android:scaleType="centerCrop"
                        app:circleCrop="true" />

                    <!-- Tên & View profile -->
                    <LinearLayout
                        android:orientation="vertical"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="16dp">

                        <TextView
                            android:id="@+id/tv_name"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="John Doe"
                            android:textSize="16sp"
                            android:textColor="@color/black"
                            android:textStyle="bold" />

                        <TextView
                            android:id="@+id/tv_view_profile"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="View profile"
                            android:textSize="14sp"
                            android:textColor="@color/purple_700" />

                    </LinearLayout>
                </LinearLayout>
            </androidx.cardview.widget.CardView>

            <!-- Divider chung -->
            <View
                android:layout_width="match_parent"
                android:layout_height="8dp"
                android:background="@color/light_grey_bg" />

            <!-- Danh sách mục Setting -->
            <LinearLayout
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <!-- Thông báo -->
                <TextView
                    android:id="@+id/item_notifications"
                    style="@style/SettingItem"
                    android:text="Notifications" />
                <View style="@style/SettingDivider"/>

                <!-- Data and Storages -->
                <TextView
                    android:id="@+id/item_data_storage"
                    style="@style/SettingItem"
                    android:text="Data and Storages" />
                <View style="@style/SettingDivider"/>

                <!-- Subscription -->
                <TextView
                    android:id="@+id/item_subscription"
                    style="@style/SettingItem"
                    android:text="Subscription" />
                <View style="@style/SettingDivider"/>

                <!-- Linked Account -->
                <TextView
                    android:id="@+id/item_linked_account"
                    style="@style/SettingItem"
                    android:text="Linked Account" />
                <View style="@style/SettingDivider"/>

                <!-- About Audiobooks -->
                <TextView
                    android:id="@+id/item_about"
                    style="@style/SettingItem"
                    android:text="About Audiobooks" />
            </LinearLayout>
        </LinearLayout>
    </ScrollView>

    <!-- Nút Log out -->
    <com.google.android.material.button.MaterialButton
        android:id="@+id/btn_logout"
        style="@style/Widget.MaterialComponents.Button.OutlinedButton"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="16dp"
        android:text="Log out"
        app:strokeColor="@color/orange"
        app:strokeWidth="1dp"
        android:textColor="@color/orange" />

</LinearLayout>
