<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fitsSystemWindows="false"
    android:background="#ffffff">

    <!-- Background Image -->
    <ImageView
        android:id="@+id/on_bg"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:src="@drawable/on_background_2"
        android:scaleType="centerCrop"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <!-- ViewPager2 để hiển thị các Fragment item -->
    <androidx.viewpager2.widget.ViewPager2
        android:id="@+id/viewPager"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        app:layout_constraintTop_toBottomOf="@id/on_bg"
        app:layout_constraintBottom_toTopOf="@id/onBtn"
        app:layout_constraintHeight_percent="0.5"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintWidth_percent="0.9" />

    <!-- Buttons (nằm trên dots) -->
    <LinearLayout
        android:id="@+id/onBtn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center"
        app:layout_constraintBottom_toTopOf="@id/list_dot"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginBottom="20dp">

        <Button
            android:id="@+id/btnSkip"
            android:layout_width="140dp"
            android:layout_height="60dp"
            android:layout_marginRight="10dp"
            android:text="Skip"
            android:background="@android:color/transparent"
            android:textColor="@color/primary_50"
            android:textSize="16sp" />

        <Button
            android:id="@+id/btnNext"
            android:layout_width="140dp"
            android:layout_height="66dp"
            android:layout_marginLeft="10dp"
            android:text="Next"
            android:textSize="16sp" />
    </LinearLayout>

    <!-- Dots (nằm dưới buttons) -->
    <LinearLayout
        android:id="@+id/list_dot"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginBottom="30dp">

        <View
            android:id="@+id/dot1"
            android:layout_width="10dp"
            android:layout_height="10dp"
            android:layout_margin="4dp"
            android:background="@drawable/bg_dot" />

        <View
            android:id="@+id/dot2"
            android:layout_width="10dp"
            android:layout_height="10dp"
            android:layout_margin="4dp"
            android:background="@drawable/bg_dot" />

        <View
            android:id="@+id/dot3"
            android:layout_width="10dp"
            android:layout_height="10dp"
            android:layout_margin="4dp"
            android:background="@drawable/bg_dot" />
    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>