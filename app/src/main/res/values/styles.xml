<!-- styles.xml -->
<resources>
    <!-- Style cho mỗi mục Setting -->
    <style name="SettingItem">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">48dp</item>
        <item name="android:gravity">center_vertical</item>
        <item name="android:paddingStart">16dp</item>
        <item name="android:paddingEnd">16dp</item>
        <item name="android:textSize">16sp</item>
        <item name="android:textColor">@color/black</item>
    </style>

    <!-- Style cho dòng phân cách nhỏ giữa các mục -->
    <style name="SettingDivider">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">1dp</item>
        <item name="android:background">#E0E0E0</item>
    </style>
    <style name="ProfileImageRounded" parent="">
        <!-- bo góc 16dp với tất cả các cạnh -->
        <item name="cornerFamily">rounded</item>
        <item name="cornerSize">16dp</item>
    </style>
</resources>
